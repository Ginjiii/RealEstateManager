<resources>

        <!-- Base application theme. -->
        <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
            <!-- Customize your theme here. -->
            <item name="colorPrimary">@color/colorPrimary</item>
            <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
            <item name="colorAccent">@color/colorAccent</item>
        </style>

        <style name="splashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
            <item name="android:windowBackground">@drawable/immo3</item>
        </style>

        <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
            <item name="chipBackgroundColor">@color/custom_chip_background</item>
        </style>

        <style name="CustomInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
            <item name="boxStrokeColor">@color/custom_input_layout_outlined</item>
            <item name="boxStrokeWidth">2dp</item>
            <item name="hintTextColor">@android:color/black</item>
        </style>

        <style name="Divider">
            <item name="android:background">@color/colorAccent</item>
        </style>

        <style name="DividerHorizontal" parent="Divider">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">2dp</item>
        </style>

        <style name="DividerVertical" parent="Divider">
            <item name="android:layout_width">3dp</item>
            <item name="android:layout_height">0dp</item>
        </style>

    <style name="TitleREM">
        <![CDATA[<style name="TitleREM">         <item name="android:textSize">@dimen/text_title</item>         <item name="android:textStyle">bold</item>     </style>]]></style>

    <style name="IconDetailREM">
        <![CDATA[<style name="IconDetailREM">         <item name="android:layout_weight">@dimen/icon_details_size</item>         <item name="android:layout_height">@dimen/icon_details_size</item>         <item name="android:tint">@color/colorPrimaryDark</item>     </style>]]></style>

    <style name="SmallTitleREM">
        <![CDATA[<style name="SmallTitleREM" parent="SmallTextREM">         <item name="android:textStyle">bold</item>      </style>]]></style>

    <style name="SmallTextREM">
        <![CDATA[<style name="SmallTextREM">         <item name="android:textSize">@dimen/small_text</item>     </style>]]></style>

</resources>